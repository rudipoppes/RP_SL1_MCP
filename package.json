{
  "name": "rp-sl1-mcp",
  "version": "1.0.0",
  "description": "Professional MCP server for Restorepoint API integration",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run build:types",
    "build:types": "echo 'Type generation skipped'",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "generate-types": "tsx scripts/generate-types.ts",
    "validate-config": "tsx scripts/validate-config.ts",
    "precommit": "npm run type-check && npm run lint && npm run test",
    "prod:start": "ENABLE_HTTP_SERVER=true NODE_ENV=production npm start",
    "prod:stop": "pkill -f 'node.*server.js'",
    "prod:logs": "tail -f logs/mcp-server.log",
    "prod:status": "curl -f http://localhost:3000/health 2>/dev/null && echo 'Running' || echo 'Stopped'"
  },
  "keywords": [
    "mcp",
    "restorepoint",
    "api",
    "backup",
    "network-management",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/inspector": "^0.17.2",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "nock": "^13.4.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=22.7.5",
    "npm": ">=9.0.0"
  }
}
